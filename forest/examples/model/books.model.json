{
    "models": [
        {
            "id": "book",
            "meta": {
                "fields": {
                    "book_title": {
                        "__value": "book_title",
                        "pk": true
                    },
                    "book_price": {
                        "__value": "book_price"
                    },
                    "book_owner": {
                        "__value": "book_owner"
                    }
                }
            },

            "databases": [
                {
                    "__xpath": "{source://sample_book/bookstore/book/}",
                    "book_title": "{title/text()}",
                    "__comment": "use int filter to convert it to int",
                    "book_price": "{price/text()}(int)",
                    "book_owner": "{owner/text()}"
                }
            ],

            "preview:result": [
                {
